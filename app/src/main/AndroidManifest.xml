<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="study.project.whereareyou" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_Pink" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <activity android:name=".SignInActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoNetworkAvailableAcitivy"
            android:theme="@style/Theme.AppCompat.Dialog" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Home" >
        </activity>
        <activity
            android:name=".NavigationDrawerItemActivity.ProfileActivity"
            android:label="Edit Profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="study.project.whereareyou.MainActivity" />
        </activity>
        <activity
            android:name=".NavigationDrawerItemActivity.SettingActivity"
            android:label="Setting" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="study.project.whereareyou.MainActivity" />
        </activity>
        <activity
            android:name=".NavigationDrawerItemActivity.FriendsActivity"
            android:label="All your Friends" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="study.project.whereareyou.MainActivity" />
        </activity>
        <activity
            android:name=".Conversation.CreateConversationActivity"
            android:label="Create Group Chat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="study.project.whereareyou.MainActivity" />
        </activity>
        <activity android:name=".Conversation.ConversationMain"
            android:label="Conversation Info">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="study.project.whereareyou.MainActivity" />
        </activity>
    </application>

</manifest>
