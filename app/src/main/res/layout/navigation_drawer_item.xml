<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/background_item_nav">

    <ImageView
        android:id="@+id/imageView_image_item"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_settings_black_48dp" />

    <TextView
        android:id="@+id/textView_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageView_image_item"
        android:layout_toRightOf="@+id/imageView_image_item"
        android:singleLine="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/imageView_image_item" />

</RelativeLayout>


